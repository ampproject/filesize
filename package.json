{
  "name": "@ampproject/filesize",
  "version": "4.0.1",
  "description": "Audit the filesize of items specified in package.json.",
  "author": "Kristofer Baxter",
  "license": "Apache-2.0",
  "main": "dist/api.js",
  "module": "dist/api.mjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "filesize": "./dist/filesize"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ampproject/filesize.git"
  },
  "scripts": {
    "build-tests": "tsc -p test/tsconfig.json",
    "postbuild-tests": "tsc-esm -p test/output",
    "pretest": "yarn npm-run-all build build-tests",
    "test": "ava -v --timeout=2m",
    "clean": "rimraf dist output test/output",
    "build": "rollup -c; chmod a+x dist/filesize",
    "try": "./dist/filesize",
    "release": "np --no-2fa",
    "prepublishOnly": "yarn npm-run-all clean build"
  },
  "dependencies": {
    "@kristoferbaxter/async": "0.0.7",
    "bytes": "3.1.0",
    "fast-glob": "3.2.2",
    "kleur": "3.0.3",
    "mri": "1.1.5"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.25.2",
    "@rollup/plugin-commonjs": "11.1.0",
    "@rollup/plugin-node-resolve": "7.1.3",
    "@rollup/plugin-typescript": "3.1.1",
    "@types/bytes": "3.1.0",
    "@types/mri": "1.1.0",
    "@types/node": "12.12.36",
    "ava": "3.7.1",
    "husky": "4.2.5",
    "lint-staged": "10.1.6",
    "np": "https://github.com/pixelastic/np/tarball/c3ab2e3b053c7da0ce40a572ca1616273ac080f8",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.4",
    "rimraf": "3.0.2",
    "rollup": "2.6.1",
    "tslib": "1.11.1",
    "typescript": "3.8.3",
    "typescript-esm": "0.0.5"
  },
  "volta": {
    "node": "14.0.0",
    "yarn": "1.22.4"
  },
  "filesize": {
    "track": [
      "./dist/**/*.mjs",
      "./dist/filesize"
    ],
    "./dist/filesize": {
      "brotli": "3 kB",
      "gzip": "3.8 kB",
      "none": "20 kB"
    },
    "./dist/api.js": {
      "brotli": "5 kB",
      "gzip": "6.5 kB"
    },
    "./dist/api.mjs": {
      "gzip": "10 kB"
    }
  },
  "ava": {
    "files": [
      "test/output/**/*.test.mjs"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn npm-run-all clean test",
      "pre-commit": "lint-staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "parser": "typescript",
    "singleQuote": true
  }
}
