{
  "name": "@ampproject/filesize",
  "version": "3.2.0",
  "description": "Audit the filesize of items specified in package.json.",
  "author": "Kristofer Baxter",
  "license": "Apache-2.0",
  "main": "dist/api.js",
  "module": "dist/api.mjs",
  "files": [
    "dist"
  ],
  "bin": {
    "filesize": "./dist/filesize"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ampproject/filesize.git"
  },
  "scripts": {
    "pretest": "tsc -p test/tsconfig.json",
    "test": "ava -v --timeout=2m",
    "clean": "rimraf dist output test/output",
    "build": "rollup -c; shx chmod a+x dist/filesize",
    "try": "./dist/filesize",
    "release": "np",
    "prepublishOnly": "yarn npm-run-all clean build"
  },
  "dependencies": {
    "bytes": "3.1.0",
    "fast-glob": "3.2.2",
    "kleur": "3.0.3",
    "mri": "1.1.5"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.24.0",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-node-resolve": "7.1.1",
    "@rollup/plugin-typescript": "3.1.1",
    "@types/bytes": "3.1.0",
    "@types/mri": "1.1.0",
    "@types/node": "12.12.31",
    "ava": "3.5.1",
    "husky": "4.2.3",
    "lint-staged": "10.0.9",
    "np": "6.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.2",
    "rimraf": "3.0.2",
    "rollup": "2.2.0",
    "shx": "0.3.2",
    "tslib": "1.11.1",
    "typescript": "3.8.3"
  },
  "volta": {
    "node": "12.16.1",
    "yarn": "1.22.4"
  },
  "filesize": {
    "track": [
      "./dist/**/*.mjs",
      "./dist/filesize"
    ],
    "./dist/filesize": {
      "brotli": "3 kB",
      "gzip": "3.8 kB",
      "none": "20 kB"
    },
    "./dist/api.js": {
      "brotli": "5 kB",
      "gzip": "6.5 kB"
    },
    "./dist/api.mjs": {
      "gzip": "10 kB"
    }
  },
  "ava": {
    "files": [
      "test/output/**/*.test.js"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn npm-run-all clean build test",
      "pre-commit": "lint-staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "parser": "typescript",
    "singleQuote": true
  }
}
